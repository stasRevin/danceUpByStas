<?xml version="1.0" encoding="UTF-8"?>

<Context docBase="danceup" path="/danceup" reloadable="true">
    <Realm className="org.apache.catalina.realm.JDBCRealm"
           driverName="com.mysql.jdbc.Driver"
           connectionURL="jdbc:mysql://localhost:3306/DanceUp?user=tomcat&amp;password=tomcat&amp;useJDBCCompliantTimezoneShift=true&amp;serverTimezone=UTC"
           userTable="User" userNameCol="username" userCredCol="password"
           userRoleTable="User_Role_View" roleNameCol="role_name"
           >
        <CredentialHandler
                className="org.apache.catalina.realm.MessageDigestCredentialHandler"
                algorithm="sha-256"
                encoding="UTF-8" />


    </Realm>
</Context>
